<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

    <TextView
            android:id="@+id/program_text_view_run_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Project:~$ "
            android:textColor="#f00"
            android:textColorHint="#ae0000"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_above="@id/center_run_layout"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/center_run_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#6b6b6b"
            android:text="-     -     -"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="8sp"
    />

    <TextView
            android:id="@+id/user_text_view_run_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@id/center_run_layout"
    />

    <EditText
            android:id="@+id/user_edit_text_run_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/user_text_view_run_layout"
            android:textColorHint="#8c8c8c"
            android:hint="User:~$ "
            android:background="@color/black"
            android:gravity="top"
            android:inputType="textMultiLine|textNoSuggestions|none"
            android:textColor="#fff"
            android:textSize="12sp"
            android:paddingTop="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
    />

</RelativeLayout>