<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="?attr/primaryColor"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp">

    <com.rey.material.widget.TextView
            android:id="@+id/app_name_start_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/app_icon_start_drawer"
            android:layout_alignTop="@id/app_icon_start_drawer"
            android:layout_marginStart="10dp"
            android:textColor="?attr/primaryTextColor"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"/>

    <com.rey.material.widget.TextView
            android:id="@+id/account_info_start_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name_start_drawer"
            android:layout_alignBottom="@id/app_icon_start_drawer"
            android:layout_alignStart="@id/app_name_start_drawer"
            android:textColor="?attr/primaryTextColor"
            android:textSize="15dp"
    />

    <ImageView
            android:id="@+id/app_icon_start_drawer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/cina_launcher"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            tools:ignore="ContentDescription"/>

</RelativeLayout>
